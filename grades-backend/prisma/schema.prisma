generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // provider = "sqlite" // For testing
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  grades   Grade[]
}

model Semester {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  courses Course[]
}

model Examination {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  grades Grade[]
}

model Course {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  semester   Semester @relation(fields: [semesterId], references: [id])
  semesterId Int
  grades     Grade[]
}

model Grade {
  id            Int         @id @default(autoincrement())
  score         Int
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
  course        Course      @relation(fields: [courseId], references: [id])
  courseId      Int
  examination   Examination @relation(fields: [examinationId], references: [id])
  examinationId Int
}
